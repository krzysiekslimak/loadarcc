<!-- Fake Carrier Login -->
<div class="card mb-4">
  <div class="card-header bg-info text-white">
    <h5>Fake Carrier Login</h5>
  </div>
  <div class="card-body">
    <% if @current_carrier %>
      <div class="alert alert-success">
        Currently logged in as: <strong><%= @current_carrier.carrier_name %></strong>
        <%= link_to "Change carrier", bids_path, class: "btn btn-sm btn-outline-secondary ml-2" %>
      </div>
    <% else %>
      <div class="alert alert-warning">
        Please select a carrier to continue:
      </div>
      <div class="row">
        <% @carriers.each do |carrier| %>
          <div class="col-md-3 mb-2">
            <%= link_to carrier.carrier_name, bids_path(carrier_id: carrier.id), class: "btn btn-outline-primary btn-block" %>
          </div>
        <% end %>
      </div>
      <div class="mt-2">
        <%= link_to "Create New Carrier", new_carrier_path, class: "btn btn-sm btn-success" %>
      </div>
    <% end %>
  </div>
</div> 